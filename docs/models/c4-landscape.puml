@startuml BridalCover CRM - C4 System Landscape

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title BridalCover CRM - System Landscape

' Enterprise Boundary
Enterprise_Boundary(bridal_enterprise, "BridalCover Enterprise") {
    
    ' People within Enterprise
    Person(vendedor, "Sales Representative", "Responsável por prospecção e contatos diretos com leads")
    Person(gerente_vendas, "Sales Manager", "Gerencia equipe, analisa performance e define estratégias")
    Person(gerente_marketing, "Marketing Manager", "Define campanhas e estratégias de aquisição de leads")
    Person(analista_dados, "Data Analyst", "Analisa métricas, gera relatórios e insights de performance")
    Person(admin_sistema, "System Administrator", "Gerencia infraestrutura e configurações do sistema")
    
    ' Core System
    System(bridal_crm, "BridalCover CRM", "Sistema principal de CRM para gestão de leads e vendas de capas protetoras")
    
    ' Supporting Systems
    System(erp_system, "ERP System", "Sistema de gestão empresarial para controle financeiro e estoque")
    System(bi_system, "Business Intelligence", "Sistema de análise de dados e geração de relatórios gerenciais")
    System(email_marketing, "Email Marketing Platform", "Plataforma de automação de marketing por email")
    System(call_center, "Call Center System", "Sistema de telefonia para suporte a vendas por telefone")
    System(mobile_workforce, "Mobile Workforce App", "Aplicativo para equipe de vendas em campo")
}

' External People
Person_Ext(proprietario_loja, "Store Owner", "Proprietário de loja de aluguel de vestidos - cliente em potencial")
Person_Ext(funcionario_loja, "Store Employee", "Funcionário de loja que pode receber contatos de vendas")

' External Enterprise Systems
Enterprise_Boundary(google_enterprise, "Google Cloud Platform") {
    System_Ext(google_places, "Google Places API", "Base de dados de estabelecimentos comerciais globais")
    System_Ext(google_maps, "Google Maps Platform", "Serviços de mapas e geocodificação")
    System_Ext(google_analytics, "Google Analytics", "Análise de tráfego web e comportamento de usuários")
}

Enterprise_Boundary(communication_providers, "Communication Service Providers") {
    System_Ext(sendgrid, "SendGrid", "Plataforma de envio de emails transacionais e marketing")
    System_Ext(twilio, "Twilio", "Plataforma de comunicação via SMS e voz")
    System_Ext(whatsapp_business, "WhatsApp Business API", "API oficial do WhatsApp para empresas")
    System_Ext(mailchimp, "Mailchimp", "Plataforma de automação de marketing por email")
}

Enterprise_Boundary(cloud_providers, "Cloud Infrastructure Providers") {
    System_Ext(aws_cloud, "Amazon Web Services", "Infraestrutura de nuvem para hospedagem e serviços")
    System_Ext(auth0, "Auth0", "Plataforma de autenticação e autorização como serviço")
    System_Ext(datadog, "Datadog", "Monitoramento de infraestrutura e aplicações")
    System_Ext(sentry, "Sentry", "Monitoramento de erros e performance de aplicações")
}

Enterprise_Boundary(financial_services, "Financial & Payment Services") {
    System_Ext(payment_gateway, "Payment Gateway", "Gateway de pagamento para transações online")
    System_Ext(banking_integration, "Banking System", "Sistema bancário para conciliação financeira")
    System_Ext(invoice_system, "Invoice Management", "Sistema de geração e gestão de faturas")
}

' Internal Relationships
Rel(vendedor, bridal_crm, "Gerencia leads e realiza vendas", "Web/Mobile")
Rel(gerente_vendas, bridal_crm, "Analisa performance da equipe", "Web Dashboard")
Rel(gerente_marketing, email_marketing, "Configura campanhas de lead nurturing", "Web Interface")
Rel(analista_dados, bi_system, "Gera relatórios executivos", "Web/SQL")
Rel(admin_sistema, bridal_crm, "Configura sistema e usuários", "Admin Panel")

Rel(vendedor, call_center, "Realiza chamadas para leads", "SIP/VoIP")
Rel(vendedor, mobile_workforce, "Atualiza status em campo", "Mobile App")

' System Integrations
Rel(bridal_crm, erp_system, "Sincroniza dados de vendas", "REST API")
Rel(bridal_crm, bi_system, "Fornece dados para análise", "ETL/Database")
Rel(bridal_crm, email_marketing, "Segmenta leads para campanhas", "API Integration")
Rel(bridal_crm, call_center, "Integra histórico de chamadas", "CTI Integration")
Rel(mobile_workforce, bridal_crm, "Sincroniza dados de campo", "REST API")

' External Customer Relationships
Rel(bridal_crm, proprietario_loja, "Contata via múltiplos canais", "Email/SMS/WhatsApp/Phone")
Rel(bridal_crm, funcionario_loja, "Recebe contatos comerciais", "Email/Phone")

' Google Services
Rel(bridal_crm, google_places, "Importa dados de estabelecimentos", "REST API")
Rel(bridal_crm, google_maps, "Obtém dados geográficos", "JavaScript API")
Rel(bi_system, google_analytics, "Importa dados de website", "Analytics API")

' Communication Services
Rel(bridal_crm, sendgrid, "Envia emails transacionais", "SMTP/API")
Rel(bridal_crm, twilio, "Envia SMS e realiza chamadas", "REST API")
Rel(bridal_crm, whatsapp_business, "Envia mensagens WhatsApp", "Webhook API")
Rel(email_marketing, mailchimp, "Executa campanhas de email", "API Integration")

' Infrastructure Services
Rel(bridal_crm, aws_cloud, "Hospedagem e armazenamento", "Cloud Services")
Rel(bridal_crm, auth0, "Autenticação de usuários", "OAuth2/SAML")
Rel(bridal_crm, datadog, "Métricas de performance", "Agent/API")
Rel(bridal_crm, sentry, "Relatórios de erro", "SDK Integration")

' Financial Integration
Rel(erp_system, payment_gateway, "Processa pagamentos", "API Integration")
Rel(erp_system, banking_integration, "Conciliação bancária", "API/File Transfer")
Rel(erp_system, invoice_system, "Gera faturas automáticas", "API Integration")

